include_rules

export CXX
export CXXFLAGS
export LDFLAGS
export RF24CXXFLAGS
export RF24LIBS
CXX=${CXX:-c++}
RF24CXXFLAGS=${RF24CXXFLAGS}
RF24LIBS=${RF24LIBS:--lrf24}
CXXFLAGS=${CXXFLAGS} $(RF24CXXFLAGS) -std=c++20 -flto -g -O3 -Wall -Wextra -pedantic
LDFLAGS=${LDFLAGS} $(RF24LIBS) -std=c++20 -flto -g -O3 -pthread

ifeq (@(BUILD_TRANSMITTER),y)

: foreach *.cxx | ../config.h |> $(CXX) $(CXXFLAGS) -c %f -o %o |> %B.o
: *.o |> $(CXX) $(LDFLAGS) %f -o %o |> transmitter

endif
